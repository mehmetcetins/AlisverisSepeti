@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
    var HavaleBanka = ViewBag.HavaleBanka as AlisverisSepeti.Models.Havalebankalari;
}
<form method="POST" enctype="multipart/form-data">
    <table>
        <tr>
            <td>
                <b>Banka Adı</b>
            </td>
            <td>

                <input type="text" name="BankaAdi" value="@HavaleBanka.BankaAdi" />

            </td>
        </tr>
        <tr>
            <td>
                <b>Şube Adı</b>

            </td>

            <td>
                <input type="text"  name="SubeAdi" value="@HavaleBanka.SubeAdi" />
            </td>
        </tr>
        <tr>
            <td>
                <b>Şube Kodu</b>
            </td>
            <td>
                <input type="text"  name="SubeKodu" value="@HavaleBanka.SubeKodu" />
            </td>
        </tr>
        <tr>
            <td>
                <b>Hesap No</b>
            </td>
            <td>
                <input type="number" name="HesapNo" value="@HavaleBanka.HesapNo" />
            </td>
        </tr>
        <tr>
            <td>
                <b>IBAN</b>
            </td>
            <td>
                <input type="text" name="Iban" value="@HavaleBanka.Iban" />
            </td>
        </tr>
        <tr>
            <td>
                <b>DovizKodu</b>
            </td>
            <td>
                <input type="text" name="DovizKodu" value="@HavaleBanka.DovizKodu" />
            </td>
        </tr>        
        <tr>
            <td>
                <b>Banka Logo</b>
            </td>
            <td>
                <input type="file" name="BankaLogo" value="@HavaleBanka.BankaLogo" />
            </td>
        </tr>
        <tr>
            <td>
                <b>Dizilis Sira</b>
            </td>
            <td>
                <input type="number" name="DizilisSira" value="@HavaleBanka.DizilisSira" />
            </td>
        </tr>
        <tr>
            <td>
                <b>Yurt İçi Aktif mi?</b>
            </td>
            <td>
                <input type="radio" name="Yiaktifmi" value="false" checked="@(HavaleBanka.Yiaktifmi == false)" />
                <input type="radio" name="Yiaktifmi" value="true" checked="@(HavaleBanka.Yiaktifmi == true)" />

            </td>
        </tr>
        <tr>
            <td>
                <b>Yurt Dışı Aktif mi?</b>
            </td>
            <td>
                <input type="radio" name="Ydaktifmi" value="false" checked="@(HavaleBanka.Ydaktifmi == false)" />
                <input type="radio" name="Ydaktifmi" value="true" checked="@(HavaleBanka.Ydaktifmi == true)" />

            </td>
        </tr>
        
        <tr>
            <td colspan="2">
                <center><input type="submit" value="@ViewBag.SubmitButtonValue" /></center>
            </td>
        </tr>


    </table>


</form>