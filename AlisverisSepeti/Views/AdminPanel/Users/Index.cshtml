@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/UsersForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Kullanici İsmi</th>
            <th>Kullanici Tipi</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var users in ViewBag.Users as List<AlisverisSepeti.Models.User>)
        {
        <tr>
            <td><a href="@Context.Request.Path/@users.UserId">@users.KullaniciIsim</a></td>
            <td>@users.KullaniciTipi</td>
            <td>@users.Durum</td>

            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@users.UserId">Sil</a>
                <a href="@Context.Request.Path/UsersForm/Update/@users.UserId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>