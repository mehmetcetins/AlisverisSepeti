@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
    var Lang = ViewBag.Lang as AlisverisSepeti.Models.Lang;
}
<form method="POST">
    <table>
        <tr>
            <td>
                <b>Title 2</b>
            </td>
            <td>
                <input type="text" name="Title2" value="@Lang.Title2" /> 
            </td>
        </tr>
       
        
        <tr>
            <td>
                <b>Aktif mi</b>
            </td>
            <td>
                <input type="radio" name="Aktifmi" value="false" checked="@(@Lang.Aktifmi == false)" /> 
                <input type="radio" name="Aktifmi" value="true" checked="@(@Lang.Aktifmi == true)" /> 
            </td>
        </tr>
        
        <tr>
            <td colspan="2">
                <center><input type="submit" value="@ViewBag.SubmitButtonValue" /></center>
            </td>
        </tr>
       

    </table>


</form>