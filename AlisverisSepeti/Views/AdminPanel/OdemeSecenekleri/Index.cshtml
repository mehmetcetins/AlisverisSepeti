@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/OdemeSecenekleriForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Odeme Sekli</th>
            <th>DizilisSira</th>
            <th>Aktif Mi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var OdemeSecenekleri in ViewBag.OdemeSecenekleri as List<AlisverisSepeti.Models.Odemesecenekleri>)
        {
        <tr>
            <td>@OdemeSecenekleri.OdemeSekli</td>
            <td>@OdemeSecenekleri.DizilisSira</td>
            <td>@OdemeSecenekleri.Aktifmi</td>
            
            
            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@OdemeSecenekleri.Id">Sil</a>
                <a href="@Context.Request.Path/OdemeSecenekleriForm/Update/@OdemeSecenekleri.Id">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>