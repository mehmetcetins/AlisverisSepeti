@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
    var OdemeSecenekleri = ViewBag.OdemeSecenekleri as AlisverisSepeti.Models.Odemesecenekleri;
}
<form method="POST">
    <table>
        <tr>
            <td>
                <b>Odeme Sekli</b>
            </td>
            <td>
                <input type="text" name="OdemeSekli" value="@OdemeSecenekleri.OdemeSekli" /> 
            </td>
        </tr>
        <tr>
            <td>
                <b>Diziliş Sıra</b>
            </td>
            <td>
                
                <input type="number" name="DizilisSira" value="@OdemeSecenekleri.DizilisSira" />
                
            </td>
        </tr>
        
        <tr>
            <td>
                <b>Aktif mi</b>
            </td>
            <td>
                <input type="radio" name="Aktifmi" value="false" checked="@(@OdemeSecenekleri.Aktifmi == false)" /> 
                <input type="radio" name="Aktifmi" value="true" checked="@(@OdemeSecenekleri.Aktifmi == true)" /> 
            </td>
        </tr>
        
        <tr>
            <td colspan="2">
                <center><input type="submit" value="@ViewBag.SubmitButtonValue" /></center>
            </td>
        </tr>
       

    </table>


</form>