@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
    var birim = ViewBag.birim;
}
<form method="POST">
    <table>

        <tr>

            <td>
                Birim
            </td>

            <td>

                <input type="text" name="birim" value="@{
                                if (birim != null)
                        {
                            @birim.Birim;
                        }
                    }" />
            </td>
        </tr>

        <tr>
            <td colspan="2"> <center><input type="submit" value="@ViewBag.SubmitButtonValue" /> </center> </td>
        </tr>

    </table>


</form>