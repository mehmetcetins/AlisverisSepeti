@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/UrunKategorilerDilForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>Dil Kodu</th>
            <th>Urun Kategori Adı</th>
            <th>Page Title</th>
            <th>Page Keywords</th>
            <th>Page Labels</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var UrunKategoriDil in ViewBag.UrunKategorilerDil as List<AlisverisSepeti.Models.UrunkategorilerDil>)
        {
        <tr>

            <td><a href="@Context.Request.Path/@UrunKategoriDil.KategoriDilId">@UrunKategoriDil.KategoriAdi</a></td>
            <td>@UrunKategoriDil.Dil.DilKodu</td>

            <td>@UrunKategoriDil.Kategori.KategoriAdi</td>
            <td>@UrunKategoriDil.PageTitle</td>
            <td>@UrunKategoriDil.PageKeywords</td>
            <td>@UrunKategoriDil.PageLabels</td>
            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@UrunKategoriDil.KategoriDilId">Sil</a>
                <a href="@Context.Request.Path/UrunKategorilerDilForm/Update/@UrunKategoriDil.KategoriDilId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>