@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/KartTaksitForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Kart Adı</th>
            <th>Durum</th>
            <th>Taksit Sayısı</th>
            <th>Taksit Oranı</th>
            <th>Aktif mi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var KartTaksitleri in ViewBag.KartTaksitleri as List<AlisverisSepeti.Models.Karttaksitleri>)
        {
        <tr>
            <td>
                 @if (KartTaksitleri.Kart != null) 
                  { 
                    @KartTaksitleri.Kart.KartAdi
                  }
                 else
                 {
                     @("Yok")
                 }
            </td>
            <td><a href="@Context.Request.Path/@KartTaksitleri.TaksitId">@KartTaksitleri.Durum</a></td>
            <td>@KartTaksitleri.TaksitSayisi</td>
            <td>@KartTaksitleri.TaksitOran</td>
            <td>@KartTaksitleri.Aktifmi</td>

            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@KartTaksitleri.TaksitId">Sil</a>
                <a href="@Context.Request.Path/KartTaksitForm/Update/@KartTaksitleri.TaksitId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>