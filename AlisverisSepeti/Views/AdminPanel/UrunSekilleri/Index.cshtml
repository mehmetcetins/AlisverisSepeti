@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/UrunSekillerForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Ekleyen</th>
            <th>Eklenme Tarihi</th>
            <th>Sekil Adi</th>
            <th>Silindi mi</th>
            <th>Aktif mi</th>
            <th>Diziliş Sıra</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var UrunSekiller in ViewBag.UrunSekiller as List<AlisverisSepeti.Models.Urunsekilleri>)
        {
        <tr>
            
            <td><a href="@Context.Request.Path/@UrunSekiller.UrunSekilId">@UrunSekiller.EkleyenNavigation.KullaniciIsim</a></td>
            
            <td>@UrunSekiller.EklenmeTarihi</td>
            <td>@UrunSekiller.UrunSekilAdi</td>
            <td>@UrunSekiller.Silindimi</td>
            <td>@UrunSekiller.Aktifmi</td>
            <td>@UrunSekiller.DizilisSira</td>


            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@UrunSekiller.UrunSekilId">Sil</a>
                <a href="@Context.Request.Path/UrunSekillerForm/Update/@UrunSekiller.UrunSekilId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>