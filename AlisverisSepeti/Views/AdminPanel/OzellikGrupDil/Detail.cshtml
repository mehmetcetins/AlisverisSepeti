@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
    var OzellikGrupDil = ViewBag.OzellikGrupDil as AlisverisSepeti.Models.OzellikgrupDil;
}


<table>
    <tbody>
        <tr>
            <td>
                <b>Grup Adi</b>
            </td>
            <td>
                @OzellikGrupDil.OzellikGrupAdi

            </td>
        </tr>
        <tr>
            <td>
                <b>Açıklama</b>

            </td>

            <td>
                @OzellikGrupDil.OzellikGrupAciklama
            </td>
        </tr>
        <tr>
            <td>
                <b>Dil</b>

            </td>

            <td>
                @OzellikGrupDil.Dil.DilKodu

            </td>
        </tr>
        <tr>
            <td>
                <b>Dil Logo</b>
            </td>
            <td>
                <img src="~/Public/images/Diller/@OzellikGrupDil.Dil.DilLogo"/>
            </td>
        </tr>
       
        <tr>
            <td>
                <a class="sil" href="/admin/OzellikGrupDil/Delete/@OzellikGrupDil.OzellikGrupDilId">Sil</a>
                <a href="/admin/OzellikGrupDil/OzellikGrupDilForm/Update/@OzellikGrupDil.OzellikGrupDilId">Duzenle</a>
            </td>
        </tr>
    </tbody>
</table>
