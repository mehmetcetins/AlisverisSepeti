@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/DegiskenTipleriForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Değişken İsmi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var DegiskenTipleri in ViewBag.DegiskenTipleri as List<AlisverisSepeti.Models.Degiskentipleri>)
        {
        <tr>
            <td>@DegiskenTipleri.DegiskenAdi</td>
            
            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@DegiskenTipleri.Id">Sil</a>
                <a href="@Context.Request.Path/DegiskenTipleriForm/Update/@DegiskenTipleri.Id">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>