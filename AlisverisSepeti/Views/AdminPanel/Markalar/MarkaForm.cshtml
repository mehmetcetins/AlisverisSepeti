@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
    var marka = ViewBag.Marka;
}
<form method="POST" enctype="multipart/form-data">
    <table>
        <tr>
            <td>
                <b>Marka Adı</b>
            </td>
            <td>
                
                <input type="text" name="MarkaAdi" value="@marka.MarkaAdi" />

            </td>
        </tr>
        <tr>
            <td>
                <b>Marka Hakkında</b>

            </td>

            <td>
                <input type="text" name="MarkaHakkinda" value="@marka.MarkaHakkinda" /> 
            </td>
        </tr>
        <tr>
            <td>
                <b>Diziliş Sırası</b>
            </td>
            <td>
                <input type="number" name="DizilisSira" value="@marka.DizilisSira" /> 
            </td>
        </tr>
        <tr>
            <td>
                <b>Aktif Mi</b>
            </td>
            <td>
                <input type="radio" name="Aktifmi" value="false" checked="@(marka.Aktifmi == false)" />
                <input type="radio" name="Aktifmi" value="true" checked="@(marka.Aktifmi == true)" />

            </td>
        </tr>
        <tr>
            <td>
                <b>Marka Logo</b>
            </td>
            <td>
                <input type="file" name="MarkaLogo" value="@marka.MarkaLogo" />
            </td>
        </tr>
        <tr>
            <td>
                <b>Marka Banner</b>
            </td>
            <td>
                <input type="file" name="MarkaBanner" value="@marka.MarkaBanner" />
            </td>
        </tr>
        
        <tr>
            <td colspan="2">
                <center><input type="submit" value="@ViewBag.SubmitButtonValue" /></center>
            </td>
        </tr>
       

    </table>


</form>