@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/MarkaForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Marka Adı</th>
            <th>Diziliş Sırası</th>
            <th>Marka Logo</th>
            <th>Aktif Mi?</th>
            
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var markalar in ViewBag.Markalar)
        {
        <tr>
            <td><a href="@Context.Request.Path/@markalar.MarkaId">@markalar.MarkaAdi</a></td>
            <td>@markalar.DizilisSira</td>
            <td>@markalar.MarkaLogo</td>
            <td>@markalar.Aktifmi</td>

            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@markalar.MarkaId">Sil</a>
                <a href="@Context.Request.Path/MarkaForm/Update/@markalar.MarkaId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>