@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
    var Markalar = ViewBag.Markalar;
}


<table>
    <tbody>
        <tr>
            <td>
                <b>Marka Adı</b>
            </td>
            <td>
                @Markalar.MarkaAdi

            </td>
        </tr>
        <tr>
            <td>
                <b>Marka Hakkında</b>

            </td>

            <td>
                @Markalar.MarkaHakkinda
            </td>
        </tr>
        <tr>
            <td>
                <b>Diziliş Sırası</b>
            </td>
            <td>
                @Markalar.DizilisSira
            </td>
        </tr>
        <tr>
            <td>
                <b>Aktif mi</b>
            </td>
            <td>
                @Markalar.Aktifmi
            </td>
        </tr>
        <tr>
            <td>
                <b>Marka Logo</b>
            </td>
            <td>
                <img src="/Public/images/Markalar/@Markalar.MarkaLogo" width="100"/>
                
            </td>
        </tr>
        <tr>
            <td>
                <b>Marka Banner</b>
            </td>
            <td>
                <img src="/Public/images/Markalar/@Markalar.MarkaBanner" width="100" />
            </td>
        </tr>
        
        <tr>
            <td>
                <a class="sil" href="/admin/Markalar/Delete/@Markalar.MarkaId">Sil</a>
                <a href="/admin/Markalar/DilForm/Update/@Markalar.MarkaId">Duzenle</a>
            </td>
        </tr>
    </tbody>
</table>
