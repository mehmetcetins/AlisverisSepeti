@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/UrunOpsiyonlarForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Opsiyon İsmi</th>
            <th>OpsiyonTipi</th>
            <th>Zorunlu mu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var UrunOpsiyonlar in ViewBag.UrunOpsiyonlar as List<AlisverisSepeti.Models.Urunopsiyonlar>)
        {
        <tr>
            <td>@UrunOpsiyonlar.OpsiyonAdi</td>
            <td>@UrunOpsiyonlar.OpsiyonTipiNavigation.Ismi</td>
            <td>@UrunOpsiyonlar.Zorunlumu</td>
            
            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@UrunOpsiyonlar.Id">Sil</a>
                <a href="@Context.Request.Path/UrunOpsiyonlarForm/Update/@UrunOpsiyonlar.Id">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>