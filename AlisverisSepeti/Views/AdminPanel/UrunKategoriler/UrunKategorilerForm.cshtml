@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
    var UrunKategori = ViewBag.UrunKategoriler as AlisverisSepeti.Models.Urunkategoriler;
}
<form method="POST" enctype="multipart/form-data">
    <table>
        <tr>
            <td>
                <b>Kategori Adi</b>
            </td>
            <td>

                <input type="text" name="KategoriAdi" value="@UrunKategori.KategoriAdi" />

            </td>
        </tr>
        <tr>
            <td>
                <b>Üst Kategori</b>
            </td>
            <td>
                <select name="PkategoriId">
                    @foreach (var Kategoriler in ViewBag.Kategoriler as List<AlisverisSepeti.Models.Urunkategoriler>)
                    {
                        <option value="@Kategoriler.KategoriId">@Kategoriler.KategoriAdi</option>

                    }
                </select>

            </td>
        </tr>
        <tr>
            <td>
                <b>Kategori Logo</b>
            </td>
            <td>
                <input type="file" name="KategoriLogo" value="@UrunKategori.KategoriLogo" />

            </td>
        </tr>
        <tr>
            <td>
                <b>Aktif mi</b>
            </td>

            <td>
                <input type="radio" name="Aktifmi" checked="@(UrunKategori.Aktifmi == false)" />
                <input type="radio" name="Aktifmi" checked="@(UrunKategori.Aktifmi == true)" />
            </td>
        </tr>
        <tr>
            <td>
                <b>Dizilis Sira</b>
            </td>
            <td>
                <input type="number" name="DizilisSira" value="@UrunKategori.DizilisSira" />

            </td>
        </tr>
        


    </table>


</form>