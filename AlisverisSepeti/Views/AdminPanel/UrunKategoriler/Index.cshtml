@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/UrunKategorilerForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Ekleyen</th>
            <th>Kategori Adı</th>
            <th>P Kategori Adı</th>
            <th>Derinlik</th>
            <th>Nesil</th>
            <th>Silindi mi </th>
            <th>Aktif mi</th>
            <th>Eklenme Tarihi</th>
            
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var UrunKategori in ViewBag.UrunKategoriler as List<AlisverisSepeti.Models.Urunkategoriler>)
        {
        <tr>
            
            <td><a href="@Context.Request.Path/@UrunKategori.KategoriId">@UrunKategori.EkleyenNavigation.KullaniciIsim</a></td>
            
            <td>@UrunKategori.KategoriAdi</td>
            <td>
                @if (UrunKategori.Pkategori != null)
                {
                    @UrunKategori.Pkategori.KategoriAdi
                }
                else
                {
                    @("-")
                }
            </td>
            <td>@UrunKategori.Depth</td>
            <td>@UrunKategori.Lineage</td>
            <td>@UrunKategori.Silindimi</td>
            <td>@UrunKategori.Aktifmi</td>

            <td>@UrunKategori.EklenmeTarihi</td>

            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@UrunKategori.KategoriId">Sil</a>
                <a href="@Context.Request.Path/UrunKategorilerForm/Update/@UrunKategori.KategoriId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>