@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
    var OzellikDegerleri = ViewBag.OzellikDegerleri as AlisverisSepeti.Models.Ozellikdegerleri;
}
<form method="POST" enctype="multipart/form-data">
    <table>
        
        <tr>
            <td>
                <b>Ozellik</b>
            </td>
            <td>
                <select name="OzellikId">

                    @foreach (var ozellik in ViewBag.Ozellikler as List<AlisverisSepeti.Models.Ozellikler>)
                    {
                        <option value="@ozellik.OzellikId"
                                @if (OzellikDegerleri.OzellikId != 0) { @if (OzellikDegerleri.OzellikId == ozellik.OzellikId) { @("selected")  }  }>
                            @if(ozellik.OzelliklerDils.Count > 0)
                                @ozellik.OzelliklerDils.First().OzellikAdi
                            else
                            {
                                @("Ozellik Adi Yok")
                            }
                        </option>

                    }
                </select>
            </td>
        </tr>




        <tr>
            <td colspan="2">
                <center><input type="submit" value="@ViewBag.SubmitButtonValue" /></center>
            </td>
        </tr>


    </table>


</form>