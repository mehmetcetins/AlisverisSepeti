@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/SiparislerForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Sipariş Tarihi</th>
            <th>Odeme Sekli</th>
            <th>Sevk Şekli</th>
            <th>Sipariş Toplami</th>
            <th>Ürün Toplami</th>
           
            
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var siparis in ViewBag.Siparisler as List<AlisverisSepeti.Models.Siparisler>)
        {
        <tr>
            
            <td><a href="@Context.Request.Path/@siparis.SiparisId">@siparis.SiparisTarihi</a></td>
            
            <td>@siparis.OdemeSekliNavigation.OdemeSekli</td>
            <td>@siparis.SevkSekliNavigation.GonderimSekli</td>
            <td>@siparis.SiparisToplami</td>
            <td>@siparis.UrunAdet</td>

            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@siparis.SiparisId">Sil</a>
                <a href="@Context.Request.Path/SiparislerForm/Update/@siparis.SiparisId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>