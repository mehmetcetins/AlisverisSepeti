@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/UrunTipleriForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Urun Tipi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var UrunTipleri in ViewBag.UrunTipleri as List<AlisverisSepeti.Models.Uruntipleri>)
        {
        <tr>
            <td>@UrunTipleri.UrunTipi</td>
            
            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@UrunTipleri.UrunTipiId">Sil</a>
                <a href="@Context.Request.Path/UrunTipleriForm/Update/@UrunTipleri.UrunTipiId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>