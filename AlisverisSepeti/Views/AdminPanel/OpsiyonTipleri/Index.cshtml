@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/OpsiyonTipleriForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Opsiyon İsmi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var OpsiyonTipleri in ViewBag.OpsiyonTipleri as List<AlisverisSepeti.Models.Opsiyontipleri>)
        {
        <tr>
            <td>@OpsiyonTipleri.Ismi</td>
            
            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@OpsiyonTipleri.Id">Sil</a>
                <a href="@Context.Request.Path/OpsiyonTipleriForm/Update/@OpsiyonTipleri.Id">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>