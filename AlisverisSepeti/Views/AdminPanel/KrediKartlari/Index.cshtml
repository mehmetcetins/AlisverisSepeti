@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/KrediKartiForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Kart Adi</th>
            <th>Pos Banka Adi</th>
            <th>Kart Logo</th>
            <th>Dizilis Sira</th>
            <th>Yurt Dışı Aktif Mi?</th>
            <th>Yurt İçi Aktif Mi?</th>
            <th>Taksit Var mi?</th>
            
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var KrediKarti in ViewBag.KrediKartlari as List<AlisverisSepeti.Models.Kredikartlari>)
        {
        <tr>
            <td><a href="@Context.Request.Path/@KrediKarti.KartId">@KrediKarti.KartAdi</a></td>
            <td>@if (KrediKarti.Pos == null) {
                @("Yok")
            } else {
                @KrediKarti.Pos.PosBankaAdi;
            }</td>
            <td><img src="/Public/images/KrediKartlari/@KrediKarti.KartLogo" /></td>

            <td>@KrediKarti.DizilisSira</td>
            <td>@KrediKarti.Ydaktifmi</td>
            <td>@KrediKarti.Yiaktifmi</td>
            <td>@KrediKarti.TaksitVarmi</td>

            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@KrediKarti.KartId">Sil</a>
                <a href="@Context.Request.Path/KrediKartlariForm/Update/@KrediKarti.KartId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>