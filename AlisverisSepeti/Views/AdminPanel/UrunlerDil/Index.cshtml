@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/UrunDillerDilForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Ürün Adi</th>
            <th>Urun Bilgisi</th>
            <th>Page Title</th>
            <th>Page Description</th>
            <th>Dil Kodu</th>
           
            
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var UrunDil in ViewBag.UrunDil as List<AlisverisSepeti.Models.UrunlerDil>)
        {
        <tr>
            
            <td><a href="@Context.Request.Path/@UrunDil.UrunDilId">@UrunDil.UrunAdi</a></td>
            
            <td>@UrunDil.UrunBilgisi</td>
            <td>@UrunDil.PageTitle</td>
            <td>@UrunDil.PageDescription</td>
            <td>@UrunDil.Dil.DilKodu</td>

            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@UrunDil.UrunDilId">Sil</a>
                <a href="@Context.Request.Path/UrunlerDilForm/Update/@UrunDil.UrunDilId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>