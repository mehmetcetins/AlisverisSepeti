@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/UrunOzelliklerForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Urun Adi</th>
            <th>Ozellik Adi</th>
            <th>Ozellik Tipi</th>
            <th>Degisken Tipi</th>
            <th>Diziliş Sıra</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var UrunOzellikler in ViewBag.UrunOzellikler as List<AlisverisSepeti.Models.Urunozellikleri>)
        {
        <tr>
            
            <td><a href="@Context.Request.Path/@UrunOzellikler.UrunOzellikId">@
                @if (UrunOzellikler.Urun.UrunlerDils.Count > 0)
                { UrunOzellikler.Urun.UrunlerDils.First().UrunAdi}
                else
                {
                    @("Urun Adi Yok")
                }
                </a></td>
            
            <td>@UrunOzellikler.OzellikAdi</td>
            <td>@UrunOzellikler.OzellikTipi</td>
            <td>@UrunOzellikler.DegiskenTipi</td>
            <td>@UrunOzellikler.DizilisSira</td>

            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@UrunOzellikler.UrunOzellikId">Sil</a>
                <a href="@Context.Request.Path/UrunOzelliklerForm/Update/@UrunOzellikler.UrunOzellikId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>