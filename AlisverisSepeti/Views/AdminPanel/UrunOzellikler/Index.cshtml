@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/UrunOzelliklerForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Urun Adi</th>
            <th>Ozellik Adi</th>
            <th>Ozellik Tipi</th>
            <th>Degisken Tipi</th>
            <th>Diziliş Sıra</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var UrunOzellikler in ViewBag.UrunOzellikler as List<AlisverisSepeti.Models.Urunozellikleri>)
        {
        <tr>
            
            <td><a href="@Context.Request.Path/@UrunOzellikler.UrunOzellikId">@UrunOzellikler.Urun.UrunlerDils.First().UrunAdi</a></td>
            
            <td>@UrunOzellikler.Ozellik.OzelliklerDils.First().OzellikAdi</td>
            <td>@UrunOzellikler.Ozellik.OzellikTipiNavigation.OzellikTipi</td>
            <td>@UrunOzellikler.Ozellik.OzellikTipiNavigation.DegiskenTipiNavigation.DegiskenAdi</td>
            <td>@UrunOzellikler.DizilisSira</td>

            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@UrunOzellikler.UrunOzellikId">Sil</a>
                <a href="@Context.Request.Path/UrunOzelliklerForm/Update/@UrunOzellikler.OzellikId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>