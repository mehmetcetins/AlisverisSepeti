@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/UrunDosyalarForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Dosya Bilgi</th>
            <th>Dosya Tipi</th>
            <th>Varsayilan mi</th>
            
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var UrunDosyalar in ViewBag.UrunDosyalar as List<AlisverisSepeti.Models.Urundosyalar>)
        {
        <tr>
            
            <td><a href="@Context.Request.Path/@UrunDosyalar.UrunDosyaId">@UrunDosyalar.FileName</a></td>
            
            <td>@UrunDosyalar.DosyaBilgi</td>

            <td>@UrunDosyalar.DosyaTipi</td>
            <td>@UrunDosyalar.Varsayilanmi</td>

            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@UrunDosyalar.UrunDosyaId">Sil</a>
                <a href="@Context.Request.Path/UrunDosyalarForm/Update/@UrunDosyalar.UrunDosyaId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>