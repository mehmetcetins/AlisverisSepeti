@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
    var OzellikTipleri = ViewBag.OzellikTipleri as AlisverisSepeti.Models.Ozelliktipleri;
}
<form method="POST" enctype="multipart/form-data">
    <table>
        <tr>
            <td>
                <b>Ozellik Tipi</b>
            </td>
            <td>

                <input type="text" name="DizilisSira" value="@OzellikTipleri.OzellikTipi" />

            </td>
        </tr>
        <tr>
            <td>
                <b>Degisken Tipi</b>
            </td>
            <td>
                <select name="DegiskenTipi">
                    @foreach (var degisken in ViewBag.DegiskenTipleri as List<AlisverisSepeti.Models.Degiskentipleri>)
                    {
                        <option value="@degisken.Id"
                                @((OzellikTipleri.DegiskenTipi != 0 && OzellikTipleri.DegiskenTipi == degisken.Id) ? "selected":"")>
                            @degisken.DegiskenAdi
                        </option>
                    }

                </select>


            </td>
        </tr>
        <tr>
            <td>
                <b>Durum</b>
            </td>
            <td>

                <input type="text" name="Durum" value="@OzellikTipleri.Durum" />

            </td>
        </tr>
        <tr>
            <td>
                <b>Tanım</b>
            </td>
            <td>

                <input type="text" name="Tanim" value="@OzellikTipleri.Tanim" />

            </td>
        </tr>
        <tr>
            <td>
                <b>Liste</b>
            </td>
            <td>
                <label for="1">Hayır</label>
                <input type="radio" id="1" name="Liste" value="false" @(OzellikTipleri.Liste == false ? "checked" :"" ) />
                <label for="2">Evet</label>
                <input type="radio" id="2" name="Liste" value="true" @(OzellikTipleri.Liste == true ? "checked" :"" ) />

            </td>
        </tr>




        <tr>
            <td colspan="2">
                <center><input type="submit" value="@ViewBag.SubmitButtonValue" /></center>
            </td>
        </tr>


    </table>


</form>