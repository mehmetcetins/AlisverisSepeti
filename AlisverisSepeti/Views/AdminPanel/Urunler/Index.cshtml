@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/UrunlerForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Ekleyen</th>
            <th>Urun Kodu</th>
            <th>Marka</th>
            <th>Stok Durum</th>
            <th>Eklenme Tarihi</th>
           
            
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Urun in ViewBag.Urunler as List<AlisverisSepeti.Models.Urunler>)
        {
        <tr>
            
            <td><a href="@Context.Request.Path/@Urun.UrunId">@Urun.EkleyenNavigation.KullaniciIsim</a></td>
            
            <td>@Urun.UrunKodu</td>
            <td>@Urun.Marka.MarkaAdi</td>
            <td>@Urun.StokDurum.StokDurumKod</td>
            <td>@Urun.EklenmeTarihi</td>

            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@Urun.UrunId">Sil</a>
                <a href="@Context.Request.Path/UrunlerForm/Update/@Urun.UrunId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>