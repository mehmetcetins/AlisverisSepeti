@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/KargolarForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Kargo Adı</th>
            <th>Kargo Bedeli</th>
            <th>Kargo Bedeli Doviz Kodu</th>
            <th>Diziliş Sıra</th>
            <th>Aktif Mi?</th>
            
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Kargolar in ViewBag.Kargolar as List<AlisverisSepeti.Models.Kargolar>)
        {
        <tr>
            <td><a href="@Context.Request.Path/@Kargolar.KargoId">@Kargolar.KargoAdi</a></td>
            <td>@Kargolar.KargoBedeli</td>
            <td>@Kargolar.KargoBedeliDovizKodu</td>
            <td>@Kargolar.DizilisSira</td>
            <td>@Kargolar.Aktifmi</td>

            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@Kargolar.KargoId">Sil</a>
                <a href="@Context.Request.Path/KargolarForm/Update/@Kargolar.KargoId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>