@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/DilBolgeForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Bolge Dil Adi</th>
            <th>Dil Kodu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dilbolge in ViewBag.DilBolge as List<AlisverisSepeti.Models.Dilbolgeler>)
        {
        <tr>
            <td>@dilbolge.BolgeDilAdi</td>
            <td>@dilbolge.DilKodu</td>
            
            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@dilbolge.BolgeId">Sil</a>
                <a href="@Context.Request.Path/DilBolgeForm/Update/@dilbolge.BolgeId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>