@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
    var DilBolge = ViewBag.DilBolge as AlisverisSepeti.Models.Dilbolgeler;
}
<form method="POST">
    <table>
        <tr>
            <td>
                <b>Bolge Dil Adi</b>
            </td>
            <td>
                <input type="text" name="BolgeDilAdi" value="@DilBolge.BolgeDilAdi" /> 
            </td>
        </tr>
        <tr>
            <td>
                <b>Dil Kodu</b>
            </td>
