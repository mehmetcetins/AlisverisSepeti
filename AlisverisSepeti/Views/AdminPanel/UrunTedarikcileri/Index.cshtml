@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/UrunTedarikcilerForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>Urun Adi</th>
            <th>Urun Stok Kodu</th>
            <th>Fiyat</th>
            <th>KDV Dahil mi</th>
            <th>KDV Oranı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var UrunTedarikciler in ViewBag.UrunTedarikciler as List<AlisverisSepeti.Models.Uruntedarikcileri>)
        {
        <tr>
            
            <td><a href="@Context.Request.Path/@UrunTedarikciler.UrunTedarikciId">@UrunTedarikciler.User.KullaniciIsim</a></td>
            
            <td>@UrunTedarikciler.Urun.UrunlerDils.First().UrunAdi</td>
            <td>@UrunTedarikciler.StokDurum.StokdurumDils.First().StokDurum</td>
            <td>@UrunTedarikciler.Fiyat</td>
            <td>@UrunTedarikciler.Kdvdahilmi</td>
            <td>@UrunTedarikciler.Kdvoran</td>


            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@UrunTedarikciler.UrunTedarikciId">Sil</a>
                <a href="@Context.Request.Path/UrunTedarikcilerForm/Update/@UrunTedarikciler.UrunTedarikciId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>