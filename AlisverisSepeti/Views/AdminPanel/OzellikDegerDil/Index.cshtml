@{
    Layout = "~/Views/Layouts/Admin/AdminLayout.cshtml";
}

<a href="@Context.Request.Path/OzellikDegerDilForm/Add/">Ekle</a>
<table cellspacing="0" border="1" cellpadding="10">
    <thead>
        <tr>
            <th>Ozellik Değer</th>
            <th>Dil</th>
            <th>Birim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var OzellikDegerDil in ViewBag.OzellikDegerDil as List<AlisverisSepeti.Models.OzellikdegerleriDil>)
        {
        <tr>
            
            <td><a href="@Context.Request.Path/@OzellikDegerDil.OzellikDegerDilId">@OzellikDegerDil.OzellikDeger</a></td>
            <td>@OzellikDegerDil.Dil.DilKodu</td>
            <td>@OzellikDegerDil.OzellikDegerNavigation.Ozellik.Birim</td>

            <td>
                <a class="sil" href="@Context.Request.Path/Delete/@OzellikDegerDil.OzellikDegerDilId">Sil</a>
                <a href="@Context.Request.Path/OzellikDegerDilForm/Update/@OzellikDegerDil.OzellikDegerDilId">Düzenle</a>
            </td>
        </tr>



        }
    </tbody>
</table>